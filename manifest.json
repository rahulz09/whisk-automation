{
  "manifest_version": 3,
  "name": "Whisk Automation",
  "version": "1.0",
  "description": "Automate image generation on Google Whisk",
  "permissions": ["activeTab", "scripting", "downloads"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://labs.google/fx/tools/whisk/*"],
    "js": ["content.js"]
  }],
  "host_permissions": ["https://labs.google/*"]
}
